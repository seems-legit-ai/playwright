    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Debug Playwright Codegen",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "packages/playwright/cli.js",
            "args": ["codegen"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Playwright CodegenRemote",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "packages/playwright/cli.js",
            "args": [
                "codegenRemote",
                "--cdp-endpoint",
                "ws://host.docker.internal:9222"
            ]
        },
    ]
}